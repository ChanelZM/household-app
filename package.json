{
  "name": "triple-boilerplate-svelte",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "examples/*"
  ],
  "engines": {
    "npm": ">=10",
    "node": ">=20"
  },
  "scripts": {
    "dev": "npm run tokens && vite dev",
    "build": "npm run tokens && vite build",
    "preview": "vite preview",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "concurrently -c \"auto\" --kill-others-on-fail \"npm run lint:*(!fix)\"",
    "lint:svelte-check": "svelte-check --fail-on-warnings --diagnostic-sources \"js,svelte\"",
    "lint:eslint": "eslint . --max-warnings=0 --color",
    "lint:css": "stylelint \"**/*.{css,scss,svelte}\" --max-warnings=0 --color",
    "lint:tsc": "tsc --noEmit --pretty",
    "lint:fix": "concurrently -c \"auto\" \"npm run lint:*(!fix|svelte-check) -- --fix\"",
    "fix": "concurrently -c \"auto\" \"npm run lint:fix\" \"npm run prettier:fix\"",
    "tokens": "node ./design-tokens/build.mjs",
    "prepare": "svelte-kit sync && husky"
  },
  "devDependencies": {
    "@poppanator/sveltekit-svg": "^4.2.1",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.6.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-triple": "^1.2.5",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-svelte": "^2.40.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.45",
    "postcss-html": "^1.6.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.79.1",
    "style-dictionary": "^4.1.2",
    "stylelint": "^16.9.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "svelte": "^4.2.9",
    "svelte-check": "^4.0.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.6"
  },
  "dependencies": {
    "@felte/validator-zod": "^1.0.17",
    "dayjs": "^1.11.13",
    "felte": "^1.2.14",
    "modern-normalize": "^3.0.1"
  }
}
